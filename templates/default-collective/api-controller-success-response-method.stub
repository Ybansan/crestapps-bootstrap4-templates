    /**
     * Get a success response
     *
     * @param mix $message
     * @param mix $data
     * @param array $meta
     *
     * @return Illuminate\Http\Response
     */
    protected function successResponse($message, $data, array $meta = [])
    {
        return response()->json(
            array_merge([
                'data' => $data,
                'message' => $message,
                'success' => true,
            ], $meta), 200);
    }